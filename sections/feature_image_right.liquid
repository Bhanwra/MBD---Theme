<div class="row col-md-10 offset-md-1 py-5">
    <div class="col-12 col-sm-6 order-sm-2">
        {% if section.settings.image %}
            {% comment %} <div class="image-wrapper" style="background-image: url({{ section.settings.image | img_url: '1280x' }})"></div> {% endcomment %}
            <img class="w-100" src="{{ section.settings.image | img_url: '1280x' }}" />
        {% endif %}
    </div>
    <div class="col-12 col-sm-6 text-left d-flex flex-column justify-content-center px-5">
        <h2 class="h2">{{ section.settings.title }}</h2>
        <p>{{ section.settings.subtitle }}</p>
        <a href="{{ section.settings.url }}">{{ section.settings.url-text }}</a>
    </div>
</div>

{% schema %}
    {
        "name": "Feature (Image on Right)",
        "class": "container-fluid feature-section",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Feature Title",
                "placeholder": "Enter title"
            },
            {
                "type": "text",
                "id": "subtitle",
                "label": "Feature Subtitle",
                "placeholder": "Enter subtitle"
            },
            {
                "type": "text",
                "id": "url-text",
                "label": "Feature Action Text",
                "info": "Call to action text",
                "placeholder": "Enter Action Text"
            },
            {
                "type": "url",
                "id": "url",
                "label": "Feature Action Link",
                "info": "Select target link"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Feature Image"
            }
        ]
    }
{% endschema %}
