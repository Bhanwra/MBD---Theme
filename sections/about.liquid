<div class="row my-5">
    <div class="col-12 col-sm-6 order-sm-2 mb-lg-0 mb-3">
        {% if section.settings.about-image %}
            <img src="{{ section.settings.about-image | img_url : '1440x' }}" class="w-100" />
        {% endif %}
    </div>
    <div class="col-12 col-sm-6 text-center text-lg-left d-flex flex-column justify-content-center px-3 px-lg-5">
        <h2 class="h2">About</h2>
        {{ section.settings.about-description }}
    </div>
</div>

{% comment %} <div class="row">
    <div class="col-12 col-md-3 text-left">
        <h3>Services</h3>
    </div>
    <div class="col-12 col-md-9 text-left">
        {{ section.settings.about-services }}
    </div>
</div> {% endcomment %}

{% comment %} <div class="row mt-5">
    <div class="col-12 col-md-9 text-right">
        <div class="row">
            <div class="col-12">
                <img src="{{section.settings.about-team-image | img_url: '1024x' }}" class="w-100 mb-3" alt="MBD Team">
            </div>
        </div>
        {{ section.settings.about-team }}
    </div>
    <div class="col-12 col-md-3 text-right">
        <h3>Team</h3>
    </div>
</div> {% endcomment %}

{% schema %}
    {
        "name": "About Page",
        "class": "container about",
        "tag": "section",
        "settings": [
            {
                "type": "textarea",
                "id": "about-description",
                "label": "Description",
                "info": "Description text",
                "placeholder": "About description"
            },
            {
                "type": "image_picker",
                "id": "about-image",
                "label": "Image"
            },
            {
                "type": "textarea",
                "id": "about-services",
                "label": "Services",
                "placeholder": "Services description"
            },
            {
                "type": "image_picker",
                "id": "about-team-image",
                "label": "Team Image"
            },
            {
                "type": "textarea",
                "id": "about-team",
                "label": "Team",
                "placeholder": "Team description"
            }
        ]
    }
{% endschema %}
