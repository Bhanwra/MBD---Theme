{%- assign projectSpan = 12 | divided_by: project_span -%}

<div class="col-12 col-sm-{{ projectSpan }} p-2">
    <a href="{{ pages[project_url].url }}" class="project-card">
        <div class="project-preview-image" style="background-image: url({{ project_image }})"></div>
        <div class="project-info">
            <div>
                <h2 class="text-dark h5 text-uppercase project-title d-inline-block">{{ project_title }}</h2>
            </div>
        </div>
    </a>
</div>